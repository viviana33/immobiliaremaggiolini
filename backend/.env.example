# ===================================
# FRONTEND CONFIGURATION
# ===================================

# URL del frontend per CORS
# In development: http://localhost:5173
# In production: https://your-app.vercel.app
FRONTEND_URL=http://localhost:5173

# Origini aggiuntive consentite (separate da virgola)
# ADDITIONAL_ORIGINS=https://www.your-domain.com,https://admin.your-domain.com


# ===================================
# DATABASE CONFIGURATION
# ===================================

# URL completo database PostgreSQL (Neon.tech)
DATABASE_URL=postgresql://user:password@host.neon.tech/database?sslmode=require


# ===================================
# APPLICATION CONFIGURATION
# ===================================

# Ambiente di esecuzione
NODE_ENV=production

# Porta server (Railway la imposta automaticamente)
PORT=5000

# URL pubblico dell'applicazione (per email e sitemap)
APP_URL=https://your-backend.railway.app

# Secret per sessioni Express (genera con: openssl rand -base64 32)
SESSION_SECRET=your_random_session_secret_here

# Token per autenticazione admin
ADMIN_TOKEN=your_admin_token_here

# Email amministratore per notifiche
ADMIN_EMAIL=admin@yourdomain.com

# Token per cron jobs
CRON_TOKEN=your_cron_token_here


# ===================================
# BREVO EMAIL SERVICE
# ===================================

BREVO_API_KEY=xkeysib-your_api_key
BREVO_TEMPLATE_ID=1
BREVO_LIST_ID=2
BREVO_SENDER_EMAIL=noreply@yourdomain.com
BREVO_SENDER_NAME=Your Company Name


# ===================================
# IMAGE STORAGE (choose one)
# ===================================

# Option A: Cloudinary (recommended for simplicity)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Option B: Cloudflare R2 (recommended for cost)
# R2_ACCOUNT_ID=your_account_id
# R2_ACCESS_KEY_ID=your_access_key
# R2_SECRET_ACCESS_KEY=your_secret_key
# R2_BUCKET_NAME=your_bucket_name
# R2_PUBLIC_URL=https://your-domain.r2.dev
