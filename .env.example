# ===================================
# CONFIGURAZIONE DATABASE
# ===================================

# URL di connessione completo al database PostgreSQL
# Formato: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://user:password@localhost:5432/maggiolini

# Credenziali PostgreSQL individuali (usate come fallback se DATABASE_URL non è valido)
PGUSER=your_postgres_user
PGPASSWORD=your_postgres_password
PGHOST=localhost
PGPORT=5432
PGDATABASE=maggiolini


# ===================================
# CLOUDFLARE R2 STORAGE (opzionale)
# ===================================

# ID dell'account Cloudflare R2
R2_ACCOUNT_ID=your_r2_account_id

# Credenziali di accesso per R2 (Access Key ID e Secret Access Key)
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key

# Nome del bucket R2 dove salvare le immagini
R2_BUCKET_NAME=your_bucket_name

# URL pubblico personalizzato per accedere alle immagini R2 (opzionale)
# Se non specificato, verrà usato il dominio .r2.dev predefinito
R2_PUBLIC_URL=https://your-custom-domain.com


# ===================================
# CLOUDINARY (opzionale - alternativa a R2)
# ===================================

# Nome del cloud Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name

# API Key di Cloudinary
CLOUDINARY_API_KEY=your_api_key

# API Secret di Cloudinary
CLOUDINARY_API_SECRET=your_api_secret


# ===================================
# BREVO EMAIL SERVICE
# ===================================

# API Key di Brevo (ex-Sendinblue) per inviare email
BREVO_API_KEY=your_brevo_api_key

# ID del template Brevo per le email di conferma (double opt-in)
BREVO_TEMPLATE_ID=1

# ID della lista Brevo dove aggiungere i contatti
BREVO_LIST_ID=2

# Email del mittente per le email transazionali
BREVO_SENDER_EMAIL=noreply@maggiolini.com

# Nome del mittente per le email transazionali
BREVO_SENDER_NAME=Maggiolini Real Estate


# ===================================
# CONFIGURAZIONE APPLICAZIONE
# ===================================

# Secret per le sessioni Express (stringa casuale sicura)
# Genera con: openssl rand -base64 32
SESSION_SECRET=your_random_session_secret_here

# Ambiente di esecuzione (development o production)
NODE_ENV=development

# Porta su cui il server ascolta le richieste
PORT=5000

# Token per autenticazione admin (usato per login amministratore)
# Genera con: openssl rand -hex 32
ADMIN_TOKEN=your_admin_token_here

# Email dell'amministratore per ricevere notifiche di nuovi lead
ADMIN_EMAIL=admin@maggiolini.com

# Token per autenticare le chiamate cron job
# Genera con: openssl rand -hex 32
CRON_TOKEN=your_cron_token_here

# URL pubblico dell'applicazione (necessario per link nelle email e sitemap)
# In produzione: https://tuodominio.com o https://tuoapp.railway.app
# In sviluppo: http://localhost:5000
APP_URL=http://localhost:5000
